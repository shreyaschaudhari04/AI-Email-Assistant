{
  "name": "Smart Email Assistant",
  "description": "AI-Powered Email Reply Generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions" : ["storage", "activeTab", "system.display"],
  "host_permissions" : [
    "http://localhost:8080/*",
    "*://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "js": [ "content.js" ],
      "matches": [ "*://mail.google.com/*" ],
      "css" : [ "content.css" ],
      "run_at" : "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }
  ],
  "background": {
  "service_worker": "background.js"
},

  "action": {
    "default_title": "Smart Email Assistant",
    "default_icon": "smart_assistant.png"
  }
}